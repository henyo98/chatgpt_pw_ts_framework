{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/src/*"],
      "@api/*": ["packages/api/src/*"],
      "@ui/*": ["packages/ui/src/*"],
      "@db/*": ["packages/db/src/*"],
      "@db": ["packages/db/src/index.ts"]
    }
  }
}
